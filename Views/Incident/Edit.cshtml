@model Incident
@{
    ViewBag.Title = ViewBag.Action + " Incident";
}
<h2>@ViewBag.Title</h2>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="customerID" class="form-label">Customer</label>
        <select class="form-select" asp-for="customerID">
            @foreach (Customer c in ViewBag.Customer)
            {
                <option value="@c.customerID">@c.firstName @c.lastName</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="productID" class="form-label">Product</label>
        <select class="form-select" asp-for="productID">
            @foreach (Product p in ViewBag.Product)
            {
                <option value="@p.ProductID">@p.name</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="title" class="form-label">Title</label>
        <input asp-for="title" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="description" class="form-label">Description</label>
        <input asp-for="description" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="technician" class="form-label">Technician</label>
        <select class="form-select" asp-for="technicianID">
            <option selected>Assign a technician...</option>
            @foreach (Technician t in ViewBag.Technician)
            {
                <option value="@t.TechnicianID">@t.name</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="dateOpened" class="form-label">Date Opened</label>
        <input asp-for="dateOpened" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="dateClosed" class="form-label">Date Closed</label>
        <input asp-for="dateClosed" class="form-control">
    </div>
    <input type="hidden" asp-for="IncidentID" />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="List"
       class="btn btn-primary">Cancel</a>
</form>