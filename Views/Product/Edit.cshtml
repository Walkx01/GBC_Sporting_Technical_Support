@model Product
@{
    ViewBag.Title = ViewBag.Action + " Product";
}
<h2>@ViewBag.Title</h2>
<form asp-action="@ViewBag.Action" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="code" class="form-label">Code</label>
        <input asp-for="code" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="name" class="form-label">Name</label>
        <input asp-for="name" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="yearlyPrice" class="form-label">Yearly Price</label>
        <input asp-for="yearlyPrice" class="form-control" placeholder="0.00">
    </div>
    <div class="mb-3">
        <label asp-for="releaseDate" class="form-label">Release Date</label>
        <input asp-for="releaseDate" class="form-control">
    </div>
    <input type="hidden" asp-for="ProductID" />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="List"
       class="btn btn-primary">Cancel</a>
</form>